
<% if (recipes != null) { %>
    <div class="d-flex mb-2 align-items-center">
        <h1>Recipe</h1>
        <div class="ms-auto">
            <a href="/edit/<%= recipes._id %>" class=" rounded-0 btn btn-dark">Edit</a>
            <a href="/delete/<%= recipes._id %>" class="rounded-0 btn btn-danger">Delete</a>
        </div>
      </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= recipes.name %></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/upload/<%= recipes.image %>" class="img-fluid sticky-top" style="top:20px" loading="lazy" alt="<%= recipes.name %>">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1><%= recipes.name %></h1></div>
                <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%= recipes.category %></div>
                <div class="col-12" style="white-space:pre-line;">
                    <h4>Cooking Instructions</h4>
                    <%= recipes.description %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flash">
                        <% recipes.ingredients.forEach(ingredient => { %>
                         <li class="list-group-item"><%= ingredient %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } else {%>
     Not Item Found
<% } %>